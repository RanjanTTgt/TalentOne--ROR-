<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7 secLeft">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item">
                <%= link_to("/") do %>
                  <i class="fas fa-home"></i>
                <% end %>
                <li class="breadcrumb-item active" aria-current="page">Attendance</li>
                </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid mt--6">
  <div class="row">
    <div class="col">
      <div class="card minHeight">
        <div class="card-header border-0">
          <h3 class="mb-0">Attendance</h3>
        </div>
        <div class="table-responsive" id="attendance-table-data">
          <%= render partial: "attendance/users_attendance_list", locals: { attendance_reports: @attendance_reports, pagy: @pagy } %>
        </div>
      </div>
    </div>
  </div>
</div>
