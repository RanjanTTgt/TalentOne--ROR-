<div class="card">
  <div class="card-header">
    <div class="row align-items-center">
      <div class="col-8">
        <h3 class="mb-0">Edit profile </h3>
      </div>
    </div>
  </div>
  <div class="card-body" data-controller="validation">
    <%= form_for current_user, as: :change_password, url: { controller: request[:controller], action: :change_password }, method: :post, remote: true do |f| %>
      <h6 class="heading-small text-muted mb-4">Change password</h6>
      <div class="">
        <% if @success %>
          <div class="mb-3">
            <span class="text-success"><%= @success %></span>
          </div>
        <% end %>
        <% if @errors %>
          <div class="mb-3">
            <span class="text-danger"><%= @errors %></span>
          </div>
        <% end %>
        <div class="row">
          <div class="col-lg-12">
            <div class="form-group">
              <label class="form-control-label" for="old_password">Current Password</label>
              <%= f.password_field(:current_password, placeholder: "Current password", class: "required form-control", data: { target: "validation.currentPassword" }) %>
              <span class="text-danger" data-validation-target="currentPasswordSpan"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6">
            <div class="form-group">
              <label class="form-control-label" for="new_password">New Password</label>
              <%= f.password_field(:password, placeholder: "New password", class: "required form-control", data: { target: "validation.newPassword" }) %>
              <span class="text-danger" data-validation-target="newPasswordSpan"></span>
            </div>
          </div>

          <div class="col-lg-6">
            <div class="form-group">
              <label class="form-control-label" for="confirm_password">Confirm Password</label>
              <%= f.password_field(:confirm_password, placeholder: "Confirm password", class: "required form-control", data: { target: "validation.confirmPassword" }) %>
              <span class="text-danger" data-validation-target="confirmPasswordSpan"></span>
            </div>
          </div>
        </div>
      </div>
      <%= f.submit(:Update, class: "btn  btn-info  mr-4  add-user-btn", data: { action: "click->validation#validate" }) %>
    <% end %>
  </div>
</div>
